<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">
        <dev.octoshrimpy.quik.common.widget.QkTextView
            style="@style/PreferenceCategory"
            android:text="@string/deduplicate_messages_category" />

        <dev.octoshrimpy.quik.common.widget.PreferenceView
            android:id="@+id/deduplicateMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/delete_sweep"
            app:summary="@string/deduplicate_messages_summary"
            app:title="@string/deduplicate_messages_title" />

        <dev.octoshrimpy.quik.common.widget.QkTextView
            android:id="@+id/deduplicationProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="?android:attr/textColorTertiary"
            app:textSize="secondary"
            android:paddingStart="72dp" />

        <ProgressBar
            android:id="@+id/deduplicationProgress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent" />

        <dev.octoshrimpy.quik.common.widget.PreferenceView
            android:id="@+id/autoDeduplicate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/auto_delete"
            app:summary="@string/auto_deduplicate_messages_summary"
            app:title="@string/auto_deduplicate_messages_title"
            app:widget="@layout/settings_switch_widget" />

        <dev.octoshrimpy.quik.common.widget.QkTextView
            style="@style/PreferenceCategory"
            android:text="@string/settings_category_general" />

        <dev.octoshrimpy.quik.common.widget.PreferenceView
            android:id="@+id/autoDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_history_toggle_off_24"
            app:title="@string/settings_auto_delete"
            tools:summary="Never" />

    </LinearLayout>

</ScrollView>
